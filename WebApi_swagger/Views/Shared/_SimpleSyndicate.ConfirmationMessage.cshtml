@{
	var confirmationMessage = (SimpleSyndicate.Mvc.Controllers.ConfirmationMessageViewModel)TempData[SimpleSyndicate.Mvc.Controllers.ConfirmationMessageImplementation.TempDataKeyName];
	if (confirmationMessage != null)
	{
		string message;
		switch (confirmationMessage.ActionPerformed)
		{
			case SimpleSyndicate.Mvc.Controllers.ConfirmationMessageActionPerformed.EntityAdded:
				message = confirmationMessage.EntityDescription + " has been added.";
				break;
			case SimpleSyndicate.Mvc.Controllers.ConfirmationMessageActionPerformed.EntityUpdated:
				message = confirmationMessage.EntityDescription + " has been updated.";
				break;
			case SimpleSyndicate.Mvc.Controllers.ConfirmationMessageActionPerformed.EntityDeleted:
				message = confirmationMessage.EntityDescription + " has been deleted.";
				break;
			default:
				message = String.Empty;
				break;
		}
		if (!String.IsNullOrEmpty(message))
		{
			<div class="alert alert-success alert-dismissable" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				@message
			</div>
		}
	}
}